<%= form_with(model: [@cluster, @component], local: true) do |form| %>
  <% if @component.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@component.errors.count, "error") %> prohibited
        this component from being saved:
      </h2>
      <ul>
        <% @component.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :component_type %><br>
    <%= form.collection_radio_buttons :component_type, Component::TYPES, :to_s, :to_s %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>