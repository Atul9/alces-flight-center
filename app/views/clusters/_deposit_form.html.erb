<% if policy(cluster).deposit? %>
  <%= form_tag({controller: 'clusters', action: 'deposit'},
               method: :post,
               class: 'form',
               id: 'credit-deposit-form'
      ) do %>
    <h4>Deposit credits</h4>
    <div class="form-group">
      <label>
        Amount
        <%= number_field :credit_deposit,
                         :amount,
                         class: 'form-control',
                         min: 1,
                         required: true
        %>
      </label>
      <label>
        Effective date
        <%= date_field :credit_deposit,
                       :effective_date,
                       class: 'form-control',
                       required: true,
                       value: Date.today
        %>
      </label>
      <%= submit_tag 'Add credits',
                     class: 'form-control btn btn-primary',
                     data: {
                         confirm: 'Are you sure you want to add support credits to this cluster?'
                     }
      %>
    </div>
  <% end %>
<% end %>
