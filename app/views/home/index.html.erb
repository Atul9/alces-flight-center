
<% @site.clusters.each do |cluster| %>
  <div class='card'>
    <div class='card-header'>
      <ul class="nav">
        <li class="nav-item">
          <span class="navbar-brand">
            <%= cluster.name %> overview
          </span>
        </li>
        <li class="nav-item">
          <%= link_to 'Details',
            cluster_path(cluster),
            class: ['nav-link', 'btn', 'btn-dark'],
            role: 'button'
          %>
        </li>
      </ul>
    </div>

    <%= render 'clusters/details', cluster: cluster %>
  </div>
<% end %>

<%= render 'cases/cases_table', cases: @site.cases, archive: false %>
