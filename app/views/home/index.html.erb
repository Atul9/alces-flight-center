
<% @site.clusters.each do |cluster| %>
  <div class='card'>
    <div class='card-header'>
      <ul class="nav">
        <li class="nav-item">
          <span class="navbar-brand">
            <%= cluster.name %> overview
          </span>
        </li>
      </ul>
    </div>

    <div class='card-body'>
      <%= cluster.components.length %> components
    </div>
  </div>
<% end %>

<%= render 'cases/cases_table', cases: @site.cases, archive: false %>
