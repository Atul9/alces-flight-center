<div id="clearance" class="card password-reset">
  <div class='card-header'>
    <ul class='nav'>
      <li class='nav-item'>
        <span class='navbar-brand'><%= t('.title') %></span>
      </li>
    </ul>
  </div>

  <div class="card-body">
    <p><%= t(".description") %></p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="form-group text-field">
        <%= form.label :email %>
        <%= form.text_field :email,
          type: 'email',
          class: 'form-control',
          required: true
        %>
      </div>

      <div class="form-group submit-field">
        <%= form.submit class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
