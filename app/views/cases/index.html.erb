
<div class='card'>
  <div class='card-header'>
    <ul class="nav">
      <li class="nav-item">
        <span class="navbar-brand">Open support cases</span>
      </li>
      <li class="nav-item">
      <%= link_to 'Create new support case',
        :new_case,
        class: ['nav-link', 'btn', 'btn-dark'],
        role: 'button'
      %>
      </li>
    </ul>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Creator</th>
        <th>Category</th>
        <th>Cluster</th>
        <th>Associated component</th>
        <th>Details</th>
        <th>Contact support</th>
      </tr>
    </thead>

    <tbody>
    <% @site.cases.each do |c| %>
      <tr>
        <td><%= c.created_at %></td>
        <td><%= c.user.name %></td>
        <td><%= c.case_category.name %></td>
        <td><%= c.cluster.name %></td>
        <td><%= c.component&.name %></td>
        <td><%= c.details %></td>
        <td>
          <a
            href='<%= c.mailto_url %>'
            target='_blank'
          >
            <%= octicon 'mail', height: 28, class: 'email-icon' %>
          </a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
