
<h1>Support for site <%= @site.name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Creator</th>
      <th>Category</th>
      <th>Cluster</th>
      <th>Associated component</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
  <% @site.cases.each do |c| %>
    <tr>
      <td><%= c.created_at %></td>
      <td><%= c.contact.name %></td>
      <td><%= c.case_category.name %></td>
      <td><%= c.cluster.name %></td>
      <td><%= c.component&.name %></td>
      <td><%= c.details %></td>
    </tr>
  <% end %>
  </tbody>
</table>
