
<% if support_case.archived %>
  <%= link_to raw(icon 'reply', interactive: true),
    restore_case_path(support_case.id),
    method: :post,
    title: 'Restore this support case from the archive',
    data: {
      confirm: 'Are you sure you want to restore this support case?'
    }
  %>
<% else %>
  <%= link_to raw(icon 'times', interactive: true),
    archive_case_path(support_case.id),
    method: :post,
    title: 'Archive this support case if it has been resolved or is no longer relevant',
    data: {
      confirm: 'Are you sure you want to archive this support case?'
    }
  %>
<% end %>
