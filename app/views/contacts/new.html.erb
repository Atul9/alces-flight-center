<h1>New Contact</h1>

<%= form_with scope: :contact, url: contacts_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :username %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>