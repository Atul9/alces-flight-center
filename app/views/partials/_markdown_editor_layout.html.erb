<div id="markdown-editor">
    <ul class="nav nav-tabs">
        <li class='nav-item <%= 'nav-link--active' if activate == 'write' %>'>
            <%= form_builder.button 'Write',
                class: 'btn btn-link',
                id: 'markdown-write-button',
                'data-write-url': write_path
            %>
        </li>
        <li class='nav-item <%= 'nav-link--active' if activate == 'preview' %>'>
            <%= form_builder.button 'Preview',
                class: 'btn btn-link',
                id: 'markdown-preview-button',
                'data-preview-url': preview_path
            %>
        </li>
    </ul>

    <%= yield if block_given? %>

    <p class="form-text text-muted">
    Styling with markdown is supported
    </p>
</div>
