<div class='card-header'>
  <ul class="nav">
    <li class="nav-item">
      <span class="navbar-brand">
        <%= title %>
      </span>
    </li>
    <% Array.wrap(list_items ||= []).flatten.each do |item| %>
      <% # Wrap the item in a <li> tag unless already wrapped %>
      <% if /\A<li\s.*/.match item %>
        <%= item %>
      <% else %>
        <li class='nav-item'>
          <%= item %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

