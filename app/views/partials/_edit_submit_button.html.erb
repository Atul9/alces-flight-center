
<% if current_user.admin? %>
  <div class='px-3 pb-3' >
    <%= case action
        when 'edit'; submit_tag "Submit", **dark_button_class
        when 'show'
          link_to 'Edit',
            edit_path,
            role: 'button',
            **dark_button_class
        end %>
  </div>
<% end %>

