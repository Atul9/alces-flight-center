
<% if flash[flash_key] %>
  <div class="row">
    <div class="col"></div>
    <div class="col-8">
      <div class="alert <%= alert_class %> alert-dismissable fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Dismiss">
          <span aria-hidden="true">&times;</span>
        </button>
        <% flash[flash_key].each_line do |flash_line| %>
          <%= sanitize flash_line, tags: ['code', 'strong'] %><br>
        <% end %>
      </div>
    </div>
    <div class="col"></div>
  </div>
<% end %>
