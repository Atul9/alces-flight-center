#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
require 'action_view'

include FileUtils
include ActionView::Helpers::TextHelper

APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  puts '== Installing dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install')
  system! 'bin/yarn'

  # Install system dependencies in same way as in production (refer to
  # https://github.com/F4-Group/dokku-apt).
  File.read('apt-packages').lines.map(&:chomp).reject(&:empty?).map do |package|
    system! "sudo apt-get install #{package}"
  end

  puts "\n== Copying sample files =="
  unless File.exist?('.env')
    cp '.env.example', '.env'
  end

  puts "\n== Preparing database =="
  system! 'bin/rails db:create'
  system! 'bin/rails db:schema:load'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  puts "\n== Restarting application server =="
  system! 'bin/rails restart'

  puts "\n== Next steps! =="
  next_steps = [
    <<~EOF,
      You will probably want to run the `bin/import-production-data` script to
      import modified real data for development.
    EOF
    <<~EOF,
      You may then need to run `bin/rake db:migrate` and `bin/rake
      data:migrate` to update this data to account for development changes
      since the last production deploy.
    EOF
    <<~EOF,
      Update this script to document or fix anything which broke or you had
      trouble with.
    EOF
  ]
  next_steps.each_with_index do |step, index|
    formatted_step = word_wrap("#{index + 1}. #{step.squish}")
    puts formatted_step
  end
end
